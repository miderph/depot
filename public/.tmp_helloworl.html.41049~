<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <title>Hello World jQuery!</title>
        <script type="text/javascript" src="javascripts/jquery-1.3.2.min.js">
        </script>
    </head>
    <body>
        <div id="divMsg">
            Hello World!
        </div>
        <input id="btnShow" type="button" value="显示" /><input id="btnHide" type="button" value="隐藏" />
        <br/>
        <input id="btnChange" type="button" value="修改内容为 Hello World, too!" />
        <script type="text/javascript">
            $("#btnShow").bind("click", function(event){
                $("#divMsg").show();
            });
            $("#btnHide").bind("click", function(event){
                $("#divMsg").hide();
            });
            $("#btnChange").bind("click", function(event){
                $("#divMsg").html("Hello World, too!");
            });
            $('#btnChange').bind("click", function(event){
                $("#divMsg").html("hello World, yan!");
            });
        </script>
        <hr/>
        <h2>
            学习二
        </h2>
		<h3>测试1<</h3>
		<div id="testDiv"> testDiv</div>
		<script type="text/javascript">
			var jQueryObject = $("#testDiv")
			document.write(jQueryObject.length)
			var testDiv = document.getElementById('testDiv')
			document.write(testDiv.innerHTML)
			testDiv.innerHTML="change testDiv innerHtml by innerHtml"
			var domToJQueryObject= $(testDiv)
			document.write(domToJQueryObject.length)
			$('#testDiv').html(testDiv.innerHTML+"<br/>"+"change testDiv innerHtml by jquery html")
		</script>
		<h3>测试2</h3>
		<div id="testDiv2">testDiv2</div>
		<script type="text/javascript">
			var testDiv2 =document.getElementById('testDiv2')
			var p=document.createElement('p')
			testDiv2.appendChild(p)
			p.appendChild(document.createTextNode('hello world p element'))
			
			var domObject = $('#testDiv2')[0]
			document.write(domObject.nodeName+" "+domObject.nodeType)
			$('#testDiv2').each(
			  function(){
				  $(this).html("testDiv2 change content")
				  document.write($(this)[0].nodeName)
				}
			)
			document.write($('div').length)
			document.write($(':input').length)
			   1. //使用Dom标准创建元素  
   var select = document.createElement("select");  
   select.options[0] = new Option("加载项1", "value1");  
   select.options[1] = new Option("加载项2", "value2");  
   select.size = "1";  
   var object = testDiv2.appendChild(select);  
   
   $("<div/>").css("border","solid 1px #FF0000").html("动态创建的div").appendTo(testDiv); 
   $("<div style=\"border:solid 1px #FF0000\">动态创建的div</div>").appendTo(testDiv);  
   
   $(document).ready(  
         function() { testDiv.innerHTML = "<div style=\"border:solid 1px #FF0000\">使用动态创建的$(document).ready(function)方法</div>"; }  
 );  
		</script>
